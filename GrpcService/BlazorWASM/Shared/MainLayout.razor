@inherits LayoutComponentBase
@using Login

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>
    <main>
        <div class="top-row px-4">
            <div>
                <AuthorizeView>
                    <Authorized>
                        <div class="card justify-content-center">
                            <div class="card-body">
                                <p class="card-text">Logged in as: <strong>@context.User.Identity.Name</strong></p>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
            
            <div class="col d-flex justify-content-end">
                <LoginButtons/>
            </div>
        </div>
        
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>